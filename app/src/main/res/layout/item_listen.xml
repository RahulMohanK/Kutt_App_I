        <TextView
            android:layout_width="match_parent"
            android:layout_height=".2dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="#e6dede"/>
    </LinearLayout>



