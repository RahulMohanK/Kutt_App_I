<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/textbox">

   <TextView
        android:id="@+id/clipboard_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
       android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:hint="Clipboard is empty!"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
        <ImageView
            android:id="@+id/save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:tint="@color/tint"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_save_white_48dp"

            />
        <ImageView
            android:id="@+id/cut"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:tint="@color/tint"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_content_cut_white_48dp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shortl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/textbox">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:id="@+id/shortlink"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/copy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:tint="@color/tint"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_content_copy_white_24dp"
            android:layout_marginRight="4dp"
            />
        <ImageView
            android:id="@+id/sharelink"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:tint="@color/tint"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_share_white_24dp"
            android:layout_marginRight="8dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/button">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_library_books_white_48dp"
        android:tint="@color/tint"
        android:layout_gravity="center"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:text="saved links"/>
    </LinearLayout>


</LinearLayout>